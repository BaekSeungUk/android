<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get query 요청"
        android:textSize="24sp"
        android:id="@+id/get_req"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get path 사용"
        android:textSize="24sp"
        android:id="@+id/get_path_req"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get QueryMap 사용"
        android:textSize="24sp"
        android:id="@+id/get_queryMap_req"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="glide test"
        android:textSize="24sp"
        android:id="@+id/glide_test"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/glide_image"/>

</LinearLayout>